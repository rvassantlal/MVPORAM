#######################
# Required parameters #
#######################
#IP address where the controller will listen for workers' connections
controller.listening.ip = 127.0.0.1

#Port number where the controller will listen for workers' connections
controller.listening.port = 12000

#Number of machines
global.worker.machines = <number of worker machines>

#Controller benchmark strategy class implementing IBenchmarkStrategy
controller.benchmark.strategy = oram.benchmark.MeasurementBenchmarkStrategy

#Worker setup class implementing ISetupWorker
controller.worker.setup = oram.benchmark.MeasurementSetup

#Worker event processor class implementing IWorkerEventProcessor
controller.worker.processor = oram.benchmark.MeasurementEventProcessor

#############################################################################
# Extra parameters provided in IBenchmarkStrategy through Properties object #
#############################################################################
# Path to a directory. All results will be saved as subfolders within this path.
output.path = <path to a directory>

# Space separated list of fault thresholds (>= 0). E.g. "0 1 2"
fault_thresholds = 0

# Space separated list of servers IP addresses. E.g. "127.0.0.1 127.0.0.1 127.0.0.1 127.0.0.1"
server_ips = 127.0.0.1 127.0.0.1 127.0.0.1 127.0.0.1 127.0.0.1 127.0.0.1 127.0.0.1 127.0.0.1 127.0.0.1 127.0.0.1

# Space separated list of number of clients per round. E.g. "1 5 10 15 25 40 50"
clients_per_round = 1 5 10 15 20 25 30 35 40 45 50

# Measure resource usage (CPU, memory, and network) (true or false)
measure_resources = false

# Space separated list of ORAM tree heights. E.g. "15 17"
tree_heights = 17

# Space separated list of ORAM bucket sizes. E.g. "2 4"
bucket_sizes = 4

# Space separated list of ORAM block sizes in bytes. E.g. "8 4096"
block_sizes = 8

# Space separated list of Zipf distribution parameters. E.g. "0.000001 1.0 2.0"
zipf_parameters = 1.0

# Duration of each measurement in seconds
measurement_duration = 120

# Space separated list of number of clients that can perform access concurrently. E.g. "10 50"
concurrent_clients = 10

#############################################################################
##      Additional parameters used to calculate statistical distance       ##
#############################################################################
# Space separated list tuples of (zipfian parameter, probability), which specifies an access distribution
access_thresholds = (0.90436, 0.8) (1.0945, 0.9) (1.2353, 0.95) (1.537, 0.99)
#access_thresholds = (0.87683, 0.8) (1.0251, 0.9) (1.1237, 0.95) (1.3101, 0.99)

# Space separated list of security parameter of Strong MVP-ORAM. E.g. "0 10 20 30 40 50"
sigmas = 0 10 20 30 40 50

#############################################################################

# If true, load oram with blocks before executing benchmark
load_oram = false
load_clients = 8

# If true, update concurrent clients number_of_updates times every update_period (in seconds)
# after initial_delay (in seconds)
update_concurrent_clients = false
initial_delay = 150
update_period = 2
number_of_updates = 50