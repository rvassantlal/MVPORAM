#######################
# Required parameters #
#######################
#IP address where the controller will listen for workers' connections
controller.listening.ip = 127.0.0.1

#Port number where the controller will listen for workers' connections
controller.listening.port = 12000

#Number of machines/workers
global.worker.machines = <number of workers>

#Controller benchmark strategy class implementing IBenchmarkStrategy
controller.benchmark.strategy = oram.benchmark.LocalMeasurementBenchmarkStrategy
#controller.benchmark.strategy = oram.benchmark.direct.DirectBenchmarkStrategy

#Worker setup class implementing ISetupWorker
controller.worker.setup = oram.benchmark.MeasurementSetup

#Worker event processor class implementing IWorkerEventProcessor
controller.worker.processor = oram.benchmark.MeasurementEventProcessor

#############################################################################
# Extra parameters provided in IBenchmarkStrategy through Properties object #
#############################################################################
# Fault threshold (>= 0)
experiment.f = 1

# Space separated list of number of clients per round
experiment.clients_per_round = 1 5 10 15 25 40 50

# Measure resource usage (CPU, memory, and network) (true or false)
experiment.measure_resources = false

# ORAM tree height
experiment.tree_height = 4

# ORAM bucket size
experiment.bucket_size = 2

# ORAM block size in bytes
experiment.block_size = 16

# Zipf distribution parameter
experiment.zipf_parameter = 1.0

# Duration of each measurement in seconds
experiment.measurement_duration = 30

# Number of clients that can perform access concurrently
experiment.concurrent_clients = 100

# Path to the MVP-ORAM project directory. All results will be saved in the 'data' subfolder within this path.
experiment.results.path = <path to MVP-ORAM folder>

# If true, load oram with blocks before executing benchmark
experiment.load_oram = false
experiment.load_clients = 8

# Server IP and port. Only used when experiment.f is set to 0
experiment.server.ip = 127.0.0.1
experiment.server.port = 11000